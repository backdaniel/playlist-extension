{

	"manifest_version": 2,
	"name": "playlist-extension",
	"version": "1.0",
	"description": "Browser extension for populating youtube playlists with user selected content.",

	"icons": {
		"16": "icons/playlist-16.png",
		"32": "icons/playlist-32.png",
		"48": "icons/playlist-48.png",
		"128": "icons/playlist-128.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/playlist-16.png"
		},
		"default_title": "Playlist",
		"default_popup": "popup/playlist.html"
	},

	"options_ui": {
		"page": "options.html"
	},

	"permissions": ["storage"]

}
